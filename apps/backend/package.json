    "express": "^5.0.1",
    "firebase-admin": "^13.0.1",
    "firebase-functions": "^6.1.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "nodemon": "^3.1.7"
  },
  "packageManager": "npm@10.9.0"
}
